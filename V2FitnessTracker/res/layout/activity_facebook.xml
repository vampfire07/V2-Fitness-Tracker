<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    
    <LinearLayout android:id="@+id/home_overallLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
     
        <include layout="@layout/logo"/>
       	<include layout="@layout/navigation"/>
    	
       	<LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
     
	        <TextView android:id="@+id/facebook_login_status"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        
	        <Button android:id="@+id/facebook_btn_post"
           		android:layout_width="wrap_content"
     	    	android:layout_height="30dp"
	       	    android:paddingTop="3dp"
	       	    android:paddingBottom="3dp"
	       	    android:text="@string/facebook_post"
	       	    android:textColor="#FF0000"
	       	    android:textSize="10dp"/>
	        
	        <Button android:id="@+id/facebook_btn_clear_credentials"
           		android:layout_width="wrap_content"
     	    	android:layout_height="30dp"
	       	    android:paddingTop="3dp"
	       	    android:paddingBottom="3dp"
	       	    android:text="@string/facebook_clearCredentials"
	       	    android:textColor="#FF0000"
	       	    android:textSize="10dp"/>
	        
    	</LinearLayout>
    	
    </LinearLayout>
    
</ScrollView>